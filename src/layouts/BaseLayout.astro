---
const { title } = Astro.props;
import Header from '@components/Header.astro'
import Footer from '@components/Footer.astro'

---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="//gavn.in/fav" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-900 text-white flex flex-col min-h-[100svh]">
		<Header/>
		<main class="flex-1" >
			<slot />
		</main>
		<Footer/>
	</body>
</html>